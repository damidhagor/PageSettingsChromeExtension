{
  "manifest_version": 2,
  "name": "Page Settings",
  "version": "1.0",
  "description": "Stores/Reloads page's zoom & scroll values and also a jquery query string which hides elements on the page.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": [
      "functions.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "functions.js",
        "content.js",
        "lib/jquery-3.5.1.min.js"
      ]
    }
  ],
  "author": "Alexander Jurk",
  "incognito": "split",
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "commands": {
    "load-apply": {
      "description": "Load & apply page settings"
    },
    "save": {
      "description": "Save currently set page settings"
    },
    "get-from-page": {
      "description": "Get current page settings"
    },
    "set-to-page": {
      "description": "Apply settings"
    },
    "toggle-elements": {
      "description": "Toogle hiding of elements"
    }
  }
}